{
  "expo": {
    "name": "LangJournal",
    "slug": "langjournal",
    "version": "1.3.12",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "jsEngine": "hermes",
    "ios": {
      "buildNumber": "1031200",
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "bundleIdentifier": "app.daiki123456.langjournal",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "NSCameraUsageDescription": "It is necessary when reading the card from the camera at the time of credit card payment."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "versionCode": 1031200,
      "permissions": ["RECORD_AUDIO"],
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.daiki123456.langjournal"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "locales": {
      "en": "./src/utils/locales/appJson/english.json",
      "ja": "./src/utils/locales/appJson/japanese.json"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics",
      "expo-localization",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-tracking-transparency",
      "expo-local-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "7d257981-58b3-4a46-9d4b-b2bf733f887f"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/7d257981-58b3-4a46-9d4b-b2bf733f887f"
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-0770181536572634~4285684545",
    "ios_app_id": "ca-app-pub-0770181536572634~6266401506",
    "delay_app_measurement_init": true
  }
}
